
type Query {
    surveys(limit: Int, page: Int): [Survey!]!
    survey(id: ID!): Survey!
    surveyResponses: [SurveyResponse!]!
    surveyResponse(id: ID!): SurveyResponse!
}

type Survey {
    id: ID!
    name: String!
    description: String!
    question: String!
    createdAt: Time!
    updatedAt: Time!
}

type SurveyResponse {
    id: ID!
    survey: Survey!
    answer: String!
    rating: Int!
    createdAt: Time!
    updatedAt: Time!
}

enum Role {
    MANAGER
    EMPLOYEE
}

